  <!-- Content -->
  <div class="carousel-inner" role="listbox">
    <% if !@announcement.blank? %>
      <div class="announcement">
        <%= @announcement.title %><br />
        <%= @announcement.body %>
      </div>
    <% end %>
    <!-- Slide 1 -->
    <div class="carousel-item active">
      <% if !@image.blank? && @image.content_image.file? %>
        <div class="carousel-bg-1" style="background-image: url(<%= @image.content_image.url %>);">
      <% else %>
        <div class="carousel-bg-1">
      <% end %>
      <div class="row jumbotron">
        <div class="col-md-12">
          <h1 class="display-3">
            <% if !@box.blank? %>
              <%= @box.title %>
            <% else %>
              Text has not been entered.
            <% end %>
          </h1>
          <p class="lead">
            <% if !@box.blank? %>
              <%= !@box.body.nil? ? @box.body.html_safe : "Text has not been entered." %>
            <% else %>
              Text has not been entered.
            <% end %>
          </p>
          <p class="lead">
            <a class="btn btn-primary btn-lg" href="/class_types" role="button">Our Classes</a> <a class="btn btn-primary btn-lg" href="/schedule" role="button">Schedule</a>
            <% if !user_signed_in? %><%= link_to('Sign Up', new_user_registration_path, class: "btn btn-primary btn-lg") %><% end %>
          </p>
        </div>
      </div>
      </div>
    </div>

